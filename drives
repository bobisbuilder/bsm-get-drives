
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer


local function fireRemoteEvent(eventName, args)
    local event = ReplicatedStorage:WaitForChild("remoteEvents"):WaitForChild(eventName)
    event:FireServer(unpack(args))
end


local function invokeRemoteFunction(funcName, args)
    local func = ReplicatedStorage:WaitForChild("remoteFunctions"):WaitForChild(funcName)
    return func:InvokeServer(unpack(args))
end


local function doRoboBearChallenge(driveType)

    fireRemoteEvent("SelectNPCOption", {"StartRoboBearChallenge"})
    task.wait(0.04)


    fireRemoteEvent("roboBearChallenge", {"selectQuest", 1})
    task.wait(0.04)


    fireRemoteEvent("roboBearChallenge", {"selectBee", 3})
    task.wait(0.04)
    fireRemoteEvent("roboBearChallenge", {"selectBee", 3})
    task.wait(0.04)


    fireRemoteEvent("roboBearChallenge", {"start"})
    task.wait(0.04)


    fireRemoteEvent("roboBearChallenge", {"quit"})
    task.wait(0.04)


    invokeRemoteFunction("ItemPackageEvent", {
        "Purchase",
        {
            Type = driveType,
            Category = "Eggs",
            Amount = 1
        }
    })
    task.wait(0.04)
end


local drives = {"RedDrive", "WhiteDrive", "BlueDrive", "GlitchedDrive"}


for _, drive in ipairs(drives) do
    for i = 1, 5 do
        doRoboBearChallenge(drive)
    end
end
